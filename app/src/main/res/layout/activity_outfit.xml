<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Outfit"
        android:id="@+id/textView2"
        android:textSize="50dp"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backToMain"
        android:id="@+id/btnBackToMain"
        android:onClick="goBackToMain"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_outfitbtn"
        android:textColor="@android:color/white"
        android:layout_marginLeft="15dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Clothing"
        android:id="@+id/btnAddClothing"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="58dp"
        android:onClick="addClothing"
        android:background="@drawable/custom_outfitbtn2"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
